        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "multipart/form-data"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "image",
              "value": "={{ $binary.data }}"
            },
            {
              "name": "user_id",
              "value": "={{ $('Line Webhook').item.json.events[0].source.userId }}"
            }
          ]
        },
        "options": {
          "response": {
            "response": {
              "responseFormat": "json"
            }
          }
        }
      },
      "id": "classify-image",
      "name": "Classify Image",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [900, 200],
      "credentials": {
        "httpHeaderAuth": {
          "id": "classification-api-auth",
          "name": "Classification API Auth"
        }
      }
    },
    {
      "parameters": {
        "resource": "message",
        "operation": "send",
        "chatId": "={{ $('Line Webhook').item.json.events[0].source.userId }}",
        "messageType": "text",
        "text": "üîç Image Classification Result:\n\nüìä Prediction: {{ $json.prediction }}\nüéØ Confidence: {{ ($json.confidence * 100).toFixed(2) }}%\n\n{{ $json.description ? 'üìù ' + $json.description : '' }}"
      },
      "id": "send-prediction",
      "name": "Send Prediction to User",
      "type": "n8n-nodes-base.line",
      "typeVersion": 1,
      "position": [1120, 200],
      "credentials": {
        "lineOAuth2Api": {
          "id": "line-oauth-credentials",
          "name": "Line OAuth2 API"
        }
      }
    },
    {
      "parameters": {
        "operation": "appendOrUpdate",
        "documentId": {
          "__rl": true,
          "value": "your-google-sheet-id",
          "mode": "id"
        },
        "sheetName": {
          "__rl": true,
          "value": "Sheet1",
          "mode": "name"
        },
        "columns": {
          "mappingMode": "defineBelow",
          "value": {
            "timestamp": "={{ new Date().toISOString() }}",
            "user_id": "={{ $('Line Webhook').item.json.events[0].source.userId }}",
            "message_id": "={{ $('Line Webhook').item.json.events[0].message.id }}",
            "prediction": "={{ $('Classify Image').item.json.prediction }}",
            "confidence": "={{ $('Classify Image').item.json.confidence }}",
            "description": "={{ $('Classify Image').item.json.description || '' }}",
            "image_url": "={{ $('Get Line Image').item.json.originalContentUrl || '' }}",
            "processing_time_ms": "={{ Date.now() - new Date($('Line Webhook').item.json.timestamp).getTime() }}"
          }
        },
        "options": {}
      },
      "id": "log-to-sheets",
      "name": "Log to Google Sheets",
      "type": "n8n-nodes-base.googleSheets",
